{
  "entrypoint": "index.html",
  "shell": "src/whip-app.html",
  "fragments": [
    "src/whip-app.html",
    "src/el-audio.html",
    "src/el-gyroscope.html"
  ],
  "sources": [
    "audio/**/*",
    "static/**/*",
    "images/**/*",
    "src/**/*",
    "*.php"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "manifest.json"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}